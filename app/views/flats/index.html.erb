<p style="color: green"><%= notice %></p>

<% content_for :title, "Flats" %>

<h1>Flats</h1>

<div id="flats">
  <% @flats.each do |flat| %>
    <%= render flat %>
    <p>
      <%= link_to "Show this flat", flat %>
    </p>
  <% end %>
</div>

<%= link_to "New flat", new_flat_path %>

<%= @markers %>
<div style='height: 300px; width: 100%' data-controller='map' data-map-markers-value="<%= @markers.to_json %>" 
    data-map-apikey-value="<%= ENV['MAPBOX_API_KEY']%>"></div>